package project;

import org.junit.Test;
import sweetSys.EmailSender;

public class EmailSenderTest {

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithNullToEmail() {
        EmailSender.sendEmail(null, "Subject", "Body");
    }

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithEmptyToEmail() {
        EmailSender.sendEmail("", "Subject", "Body");
    }

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithNullSubject() {
        EmailSender.sendEmail("recipient@example.com", null, "Body");
    }

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithEmptySubject() {
        EmailSender.sendEmail("recipient@example.com", "", "Body");
    }

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithNullBody() {
        EmailSender.sendEmail("recipient@example.com", "Subject", null);
    }

    @Test(expected = IllegalArgumentException.class)
    public void testSendEmailWithEmptyBody() {
        EmailSender.sendEmail("recipient@example.com", "Subject", "");
    }
    
}
